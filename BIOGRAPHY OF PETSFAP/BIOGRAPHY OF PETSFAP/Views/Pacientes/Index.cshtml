@model IEnumerable<BIOGRAPHY_OF_PETSFAP.Models.Paciente>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table" id="tablaPacientes">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Animal)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Raza)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Edad)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Peso)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cliente.Id_Cliente)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estado.Descripcion)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Animal)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Raza)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Edad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Peso)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cliente.Id_Cliente)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Estado.Descripcion)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id_Paciente }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id_Paciente }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id_Paciente })
                    </td>
                </tr>
            }
        </tbody>
    </table>
<input type="hidden" id="rol" value="@ViewData["HiddenFieldRol"]">
    <script src="~/Scripts/Pacientes/Pacientes.js"></script>
