@model IEnumerable<BIOGRAPHY_OF_PETSFAP.Models.Servicio>
@{
    ViewBag.Title = "Servicios";
}
<input type="button" class="btn btn-primary" value="Agregar" onclick="@("window.location.href='" + @Url.Action("Create", "Servicios") + "'");" />
<hr />
<span style="color: #a94442;">@ViewBag.Exception</span>
<hr />
<table class="table" id="tablaServicio">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Costo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tiempo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Costo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tiempo)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id_Servicio }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id_Servicio }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id_Servicio })
                </td>
            </tr>
        }
    </tbody>
</table>
<input type="hidden" id="rol" value="@ViewData["HiddenFieldRol"]">
<script src="~/Scripts/Servicios/Index.js"></script>