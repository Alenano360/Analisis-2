                @Html.ValidationMessageFor(model => model.Id_Estado, "", new { @class = "text-danger" })
            </div>
        </div>*@

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div style="margin-right:25%; float:left">
                    <input type="submit" value="Agregar" class="btn btn-default" />
                </div>
                <div style="float:left;">
                    <input type="button" class="btn btn-default"  value="Regresar a la Lista" onclick="@("window.location.href='" + @Url.Action("Index", "Usuarios") + "'");" />
                </div>
        </div>
    </div>
    </div>
}

