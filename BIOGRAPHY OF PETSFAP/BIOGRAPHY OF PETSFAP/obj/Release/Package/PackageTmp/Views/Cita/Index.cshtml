@model IEnumerable<BIOGRAPHY_OF_PETSFAP.Models.Cita>

@{
    ViewBag.Title = "Citas";
}

<input type="button" class="btn btn-primary" value="Agregar" onclick="@("window.location.href='" + @Url.Action("Create", "Cita") + "'");" />

    <table id="tablaCitas" >
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Fecha)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Hora_Inicio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cliente.Id_Cliente)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Paciente.Animal)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fecha)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Hora_Inico)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cliente.NombreCompleto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Paciente.PacienteCompleto)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.Id_Cita }) |
                        @Html.ActionLink("Detalles", "Details", new { id = item.Id_Cita }) |
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.Id_Cita })
                    </td>
                </tr>
            }
        </tbody>
    </table>

<input type="hidden" id="rol" value="@ViewData["HiddenFieldRol"]">
<script src="~/Scripts/Cita_Medica/Cita_Medica.js"></script>