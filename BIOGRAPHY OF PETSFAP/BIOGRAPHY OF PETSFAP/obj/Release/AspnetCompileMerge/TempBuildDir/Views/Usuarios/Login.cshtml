@model BIOGRAPHY_OF_PETSFAP.Models.Usuarios

@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Iniciar Sesion</title>
    @Styles.Render("~/Content/css")
    <meta name="keywords" content="" />
    <link href="~/Content/Login.css" rel="stylesheet" />
    <link rel="Shortcut Icon" href="~/images/icono.png" type="image/x-icon" />
</head>
<body>
    <div class="login-page">
       
        @using (Html.BeginForm())
        {
            
    <div class="form">
        <span style="color: #a94442;">@ViewBag.Error</span>    
        <br/>
        <img src="~/images/logo.png" alt="" />
            <div class="editor-label">@Html.LabelFor(u => u.Usuario)</div>
            <div class="editor-field">
                @Html.TextBoxFor(u => u.Usuario, new { htmlAttributes = new { @class = "form-control", placeholder = "Usuario" } })
                @Html.ValidationMessageFor(u => u.Usuario, "", new { @class = "text-danger" })
            </div>
            <div class="editor-label">@Html.LabelFor(u => u.Contraseña)</div>
            <div class="editor-field">
                @Html.PasswordFor(u => u.Contraseña, new { htmlAttributes = new { @class = "form-control" ,placeholder = "Contraseña" } })
                @Html.ValidationMessageFor(u => u.Contraseña, "", new { @class = "text-danger" })
                
            </div>
        <button>Iniciar Sesion</button>

        
    </div>
        }
    </div>
</body>

</html>
@Scripts.Render("~/bundles/modernizr")